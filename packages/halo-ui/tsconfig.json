{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "src/halo/*.tsx",
    "src/halo/*.ts",
    "src/halo/**/*.tsx",
    "src/halo/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}